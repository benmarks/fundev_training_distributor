<?xml version="1.0" encoding="UTF-8"?>
<layout>
    <adminhtml_distributor_list>
        <reference name="content">
            <block type="distro/adminhtml_distributor" name="distributor"/>
        </reference>
    </adminhtml_distributor_list>

    <adminhtml_distributor_grid>
        <block type="distro/adminhtml_distributor_grid" name="ajax_grid" output="toHtml"/>
    </adminhtml_distributor_grid>

    <adminhtml_distributor_edit>
        <reference name="content">
            <block type="distro/adminhtml_distributor_edit" name="distro_form"/>
        </reference>
        <reference name="left">
            <block type="distro/adminhtml_distributor_edit_tabs" name="distro_tabs"/>
        </reference>
    </adminhtml_distributor_edit>

    <adminhtml_distributor_new>
        <update handle="adminhtml_distributor_edit"/>
    </adminhtml_distributor_new>

</layout>
